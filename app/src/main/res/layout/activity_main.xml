<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRedBox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
    <LinearLayout
        android:id="@+id/bigGreenBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="80dp"
        android:background="#fff">

        <EditText
            android:id="@+id/textInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text"
            android:text="0."
            android:textAlignment="textEnd"
            android:textSize="37sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bigBlueBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="#444"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/blackBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#444"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/greenBox1"
                android:layout_weight="0.25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#444">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/style1"
                    android:text="OFF"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/style1"
                    android:text="MRC"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/style1"
                    android:text="M-"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/style1"
                    android:text="M+"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/style1"
                    android:visibility="invisible"
                    android:text="Hide"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/greenBox2"
                android:layout_weight="0.25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#444">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/style1"
                    android:text="%"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/style1"
                    android:text="√"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/style1"
                    android:text="MC"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/style1"
                    android:text="MR"/>

                <Button
                    android:id="@+id/btnChia"
                    style="@style/style1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="chiaBtn"
                    android:text="÷" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/greenBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#444">

                <Button
                    style="@style/style1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="+⁄-" />

                <Button
                    android:id="@+id/btnSeven"
                    style="@style/style2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="sevenBtn"
                    android:text="7" />

                <Button
                    android:id="@+id/btnEight"
                    style="@style/style2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="eightBtn"
                    android:text="8" />

                <Button
                    android:id="@+id/btnNine"
                    style="@style/style2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="nineBtn"
                    android:text="9" />

                <Button
                    android:id="@+id/btnNhan"
                    style="@style/style1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="nhanBtn"
                    android:text="x" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/greenBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#444">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/style1"
                    android:text="♪"/>

                <Button
                    android:id="@+id/btnFour"
                    style="@style/style2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="fourBtn"
                    android:text="4" />

                <Button
                    android:id="@+id/btnFive"
                    style="@style/style2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="fiveBtn"
                    android:text="5" />

                <Button
                    android:id="@+id/btnSix"
                    style="@style/style2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="sixBtn"
                    android:text="6" />

                <Button
                    android:id="@+id/btnTru"
                    style="@style/style1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="truBtn"
                    android:text="-" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/blueBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#444">
                <LinearLayout
                    android:id="@+id/redBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="#444"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/greenBox5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#444">

                        <Button
                            android:id="@+id/btnDelete"
                            style="@style/style3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="deleteAllBtn"
                            android:text="CE" />

                        <Button
                            android:id="@+id/btnOne"
                            style="@style/style2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="oneBtn"
                            android:text="1" />

                        <Button
                            android:id="@+id/btnTwo"
                            style="@style/style2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="twoBtn"
                            android:text="2" />

                        <Button
                            android:id="@+id/btnThree"
                            style="@style/style2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="threeBtn"
                            android:text="3" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/greenBox6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#444">

                        <Button
                            android:id="@+id/deleteBtn"
                            style="@style/style3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="deleteBtn"
                            android:text="ON⁄C" />

                        <Button
                            android:id="@+id/btnZero"
                            style="@style/style2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="zeroBtn"
                            android:text="0" />

                        <Button
                            android:id="@+id/btnDecimal"
                            style="@style/style2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="decimalBtn"
                            android:text="." />

                        <Button
                            android:id="@+id/btnResult"
                            style="@style/style2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="resultBtn"
                            android:text="=" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btnCong"
                    style="@style/style1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="congBtn"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>